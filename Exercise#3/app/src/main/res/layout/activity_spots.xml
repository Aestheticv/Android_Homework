<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aesthetic.exercise3.Spots">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/textView_SpotName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Spot"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_SoptImg"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:srcCompat="@mipmap/p0" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="218dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_SpotIntro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SpotIntro" />
            </ScrollView>

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_Map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map" />

            <Button
                android:id="@+id/button_Website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website" />

            <Button
                android:id="@+id/button_Tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
